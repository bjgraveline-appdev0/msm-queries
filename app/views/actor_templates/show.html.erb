 <h1>
  Actor #<%= @the_actor.id%> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;


<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
  <%=@the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%=@the_actor.image%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.updated_at)%> ago
  </dd>
</dl>

<hr>

<h1>
Filmogrpahy
</h1>
<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

<% @filmography.each do |a_film|%>
  <tr>
      
    <td>
      <%m = Movie.where({ :id => a_film.movie_id}).at(0)%>
      <%=m.title%>
    </td>
    <td>
      <%=m.year%>
    </td>
    <td>
      <%d = Director.where({ :id => m.director_id}).at(0)%>
      <%=d.name%>
    </td>
    <td>
      <%=a_film.name%>
    </td>
    <td>
      <a href="/movies/<%=m.id%>">
        Show details
      </a>


 
<%end%>
</table>
